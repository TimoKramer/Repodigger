<GridLayout>
    canvas.before:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<RootWidget>
    BoxLayout:
        size_hint: .7, .1
        pos_hint: {'center_x': .5, 'center_y': .5}
        rows:1
        Label:
            text: "Enter Github-Repo"
            text_size: self.width-10, self.height-10
            valign: 'middle'
            halign: 'center'
            size_hint_x: .3
        TextInput:
            hint_text: "eg. timokramer/repodigger"
            text_size: self.width-10, self.height-10
            valign: 'middle'
            halign: 'center'
            padding_y: ( self.height - self.line_height ) / 2
            size_hint_x: .5
        Button:
            text: "OK"
            text_size: self.width-20, self.height-20
            valign: 'middle'
            halign: 'center'
            size_hint_x: .2